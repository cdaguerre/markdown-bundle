{
    "name": "cdaguerre/markdown-bundle",
    "type": "symfony-bundle",
    "description": "Integrate back and forth markdown conversion in your Symfony2 project",
    "homepage": "https://github.com/cdaguerre/markdown-bundle",
    "keywords": ["markdown", "html to markdown", "markown to html"],
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Daguerre",
            "email": "christian@daguer.re"
        }
    ],
    "require": {
        "php":                          ">=5.3.2",
        "michelf/php-markdown":         ">=1.4",
        "nickcernis/html-to-markdown":  ">=2.2",
        "symfony/dependency-injection": "~2.3",
        "symfony/config":               "~2.3",
        "symfony/http-kernel":          "~2.3",
        "symfony/twig-bundle":          "~2.3|~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.1",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-0": { "Markdown\\": "src/" }
    }
}
